<%- include ('partials/navbar.ejs') %>
    <div class="container-fluid p-3 m-4">
        <div class="row">
            <div class="col">
                <img src="https://images.pexels.com/photos/6801642/pexels-photo-6801642.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500"  alt="Profile picture" class="row rounded-circle mb-3">
                <a href="" class="link">Change Profile Picture</a>
            </div>
            <div class="col text-left">
                <h1 class="mb-4">Profile Name</h1>
                <ul class="">
                    <li class="list-item profile-list">
                        <label class="">Bithday:</label>
                        <p class="ps-4">January 26, 1984</p>
                    </li>
                    <li class="list-item profile-list">
                        <label class="">Gender:</label>
                        <p class="ps-4">M</p>
                    </li>
                    <li class="list-item profile-list">
                        <label class="">Address:</label>
                        <p class="ps-4">31 Spooner St, Quahog, Rhode Island 54286</p>
                    </li>
                    <li class="list-item profile-list">
                        <label class="">Phone:</label>
                        <p class="ps-4">9546608423</p>
                    </li>
                    <li class="list-item profile-list">
                        <label class="">Plan:</label>
                        <p class="ps-4">Basic</p>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row mt-5 text-left">
            <h1 class="mb-3">Account Details</h1>
            <form action="" method="POST" class="row">
                <div class="row mb-2">
                    <label for="name">Full Name</label>
                    <input name="name" type="text" class="form-control p-3">
                </div>
                
                <div class="row mb-2">
                    <label for="username">Username</label>
                    <input name="username" type="text" class="form-control p-3">
                </div>

                <div class="row mb-2">
                    <label for="email">Email</label>
                    <input name="email" type="email" class="form-control p-3">
                </div>

                <div class="row mb-2">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control p-3">
                </div>

                <div class="row mb-2">
                    <label for="confpassword">Password</label>
                    <input name="confpassword" type="password" class="form-control p-3">
                </div>

                <div class="row mb-2">
                    <label for="language">Preferred Language</label>
                    <select name="language" type="text" class="form-control p-3">
                        <option value="English" class="" selected>English</option>
                        <option value="Spanish" class="">Spanish</option>
                        <option value="French" class="">French</option>
                </div>
                <button class="btn btn-primary p-3">Edit</button>
            </form>
        </div>
    </div>
<%- include ('partials/footer.ejs') %>