<%- include('partials/noAccessNavbar.ejs')%>

        <div id="login-box" class="container-fluid">
            <div class="row">
                <div class="mt-5 col-sm-9 text-center p-5 shadow p-3 mb-5 bg-body rounded-3 position-absolute top-50 start-50 translate-middle">
                        <h1 class="text-success text-center">Tastebuds Signin</h1>
                        <img class="text-center" src="https://t3.ftcdn.net/jpg/01/20/49/38/240_F_120493823_W77pKR6mH1yAKfIRZNFrVrUItIfklgk7.jpg" alt="TasteBuds Logo">
                        <form class="form-signin" action="/signin" method="POST" autocomplete="on" autocapitalize="on">
                            
                            <label for="username" class="mb-3 form-label float-left">Username or Email</label>
                            <div class="input-group mb-3">
                                <br>
                                <i id="user" class="fa fa-user input-group-text"></i>
                                <input class="form-control rounded" name="userName" type="text" placeholder="Username or Email..." title="Please enter a valid Username or Email." required>
                            </div>

                            <label for="password" class="mb-3 form-label float-left">Password</label>
                            <div class="input-group mb-3">
                                <br>
                                <i id="lock" class="fa fa-lock input-group-text"></i>
                                <input class="form-control rounded" name="password" type="password" placeholder="Password..." title="Please enter a valid password." required>
                            </div>
                            
                            <div id="area" class="form-check mt-3">
                                <div class="float-left">
                                    <input id="checkbox" class="form-check-input" type="checkbox">  
                                    <label class="form-check-label px-2">Remember Me</label>
                                </div>
                                <div class="float-right">
                                    <a class="text-success mx-5" href="/forgot-password">Forgot Password?</a>
                                </div>
                            </div>
                            <br>
                            <div class="">
                                <button id="signin" class="btn btn-block btn-success mb-3 rounded" type="submit" value="Signin">Signin</button>
                                <a id="signup-btn" class="btn btn-block btn-primary rounded" href="/signup">Sign Up</a>    
                            </div>                        
                            
                        </form>
                </div>
            </div>
        </div>

<%- include('partials/footer.ejs')%>
