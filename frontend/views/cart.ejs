<%- include('partials/navbar.ejs')%>

        <!--Shopping Cart-->
        <section id="shopping-cart" class="container-fluid m-auto">
            <div class="row">
                <div id="products" class="col-md-9">
                    <br>
                    <br>
                    <h1 class="text-success">Shopping Cart</h1>
                    <br>
                    <table class="table table-light">
                        <thead class="thead-light text-success">
                            <tr>
                                <th>Product Details</th>
                                <th>Quantity</th>
                                <th>Price (each)</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Cheese Burger</td>
                                <td><input id="quantity" class="text-center" type="number" min="0" max="20" value="1"></td>
                                <td>$12.79</td>
                                <td>$12.79</td>
                                <td><button class="btn btn-danger fs-5"><i id="trash" class="fa fa-trash"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                    <hr>
                    <label class="float-left">Total</label>
                    <p class="float-right text-success">$13.69</p>
                </div>
                <div id="summary" class="p-3 col-md-3 mt-3 text-left shadow rounded">
                    <h1 class="text-success text-center">Order Summary</h1>
                    <hr>
                    <label>Items 1</label>         
                    <p class="float-right">$12.79</p>
                    <br>
                    <br>
                    <label>Method</label>
                    <br>
                    <select name="method" id="" class="form-select">
                        <option value="Dine In">Dine In</option>
                        <option value="Carry Out">Carry Out</option>
                        <option value="Delivery">Delivery</option>
                    </select>
                    <br>
                    <br>
                    <label>Total</label>
                    <p class="float-right text-success">$13.69</p>
                    <br>
                    <br>
                    <form action="/" method="POST">
                        <div class="input-group">
                            <input class="form-control" name="promo" id="promo" type="text" placeholder="Promo Code..." minlength="1" maxlength="20" title="Please enter a valid promo code." required>
                            <button class="btn btn-success" type="submit" name="apply" id="apply">Apply</button>
                        </div>
                        <hr>
                        <a class="btn btn-primary btn-block" type="submit" href="/checkout">Proceed to Checkout</a>
                    </form>
                </div>
            </div>
        </section>
        
<%- include('partials/footer.ejs')%>